SRCS=ft_pipex.c \
	ft_parse.c \
	utils.c \
	
OBJS=$(SRCS:.c=.o)

CC=gcc

CFLAGS=-Wall -Wextra -Werror

NAME=pipex

all: $(NAME)

$(NAME): $(OBJS)
	$(MAKE) -C ./libft
	cp libft/libft.a $(NAME)
	ar rcs $(NAME) $(OBJS)
	
%.o: %.c
		$(CC) -c $(CFLAGS) -o $@ $<

clean:
		$(MAKE) clean -C ./libft
		rm -f $(OBJS)

fclean:	clean
		$(MAKE) fclean -C ./libft 
		rm -f $(NAME)

re:	fclean all

.PHONY:	all	clean fclean re
